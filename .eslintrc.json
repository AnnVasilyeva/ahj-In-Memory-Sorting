{
    "env": {
        "jest": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        //поддерживает ++
        "no-plusplus": "off",

        //не ругается если есть вывод в консоль
        "no-console": "off",

        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-param-reassign": [
            "error",
            { "props": false }
        ]
    }
}
